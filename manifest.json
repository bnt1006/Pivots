{
	"manifest_version": 2,
	"name": "Pivots",
	"version": "1.0",
	"description": "Pivot to different sites!",
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"browser_action":{
		"default_icon": "icon16.png",
		"default_popup": "pivot.html"
	},

	"background": {
		"scripts": ["pivotBackground.js"],
		"persistent": false
	},

	"permissions": [
		"contextMenus",
		"storage"	
	]

}